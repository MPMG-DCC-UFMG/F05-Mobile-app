<resources>

    <!-- Base application theme. -->
    <style name="MPAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/MPAppTheme.CustomBottomSheetDialog</item>
    </style>

    <style name="MPAppTheme.FullScreen" parent="MPAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MPAppTheme.InputTitle1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/label1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MPAppTheme.Title1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/title2</item>
    </style>

    <style name="MPAppTheme.PublicWorkName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/title2</item>
    </style>

    <style name="MPAppTheme.PublicWorkAddress" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/textAddress</item>
    </style>

    <style name="MPAppTheme.PublicWorkDistance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/textAddress</item>
    </style>

    <style name="MPAppTheme.TextUpload" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="MPAppTheme.TextSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_xsmall</item>
        <item name="android:fontFamily">@font/nunito_light</item>
    </style>

    <style name="MPAppTheme.EditText1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_input</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="MPAppTheme.EditText2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_input2</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MPAppTheme.EditText3" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_input3</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MPAppTheme.ButtonBase" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="MPAppTheme.ButtonBigBlue" parent="MPAppTheme.ButtonBase">
        <item name="borderWidth">0dp</item>
        <item name="android:backgroundTint">@color/button_primary_blue</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="MPAppTheme.ButtonBigGrey" parent="MPAppTheme.ButtonBase">
        <item name="borderWidth">0dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:backgroundTint">@color/button3</item>
    </style>

    <style name="MPAppTheme.ButtonBigWhite" parent="MPAppTheme.ButtonBase">
        <item name="borderWidth">0dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
    </style>

    <style name="MPAppTheme.ButtonSmallBlue" parent="MPAppTheme.ButtonBase">
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:backgroundTint">@color/button2</item>
        <item name="android:textColor">@color/buttonValid1</item>
        <item name="iconTint">@color/buttonValid1</item>
    </style>

    <style name="MPAppTheme.ButtonSmallRed" parent="MPAppTheme.ButtonBase">
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:backgroundTint">@color/button2</item>
        <item name="android:textColor">@color/buttonInvalid1</item>
        <item name="iconTint">@color/buttonInvalid1</item>
    </style>

    <style name="MPAppTheme.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_inset</item>
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:buttonTint">@color/base_checkbox</item>
    </style>

    <style name="MPAppTheme.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_inset</item>
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:buttonTint">@color/base_checkbox</item>
    </style>

    <style name="MPAppTheme.CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MPAppTheme.CustomBottomSheet</item>
    </style>

    <style name="MPAppTheme.CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">
            @style/MPAppTheme.CustomShapeAppearanceBottomSheetDialog
        </item>
    </style>

    <style name="MPAppTheme.CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>
